<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2>Sign Up</h2>
    </div>
    <div id="signup" role="tabpanel">
      <form id="signup-form" class="card-body">
        <div class="form-group">
          <label for="username-input-signup" class="form-label">Username</label>
          <input type="text" id="username-input-signup" class="form-control" />
        </div>
        <div class="form-group">
          <label for="password-input-signup" class="form-label">Password</label>
          <input
            type="password"
            id="password-input-signup"
            class="form-control"
          />
        </div>
        <button
          type="submit"
          id="signup-btn"
          class="btn btn-primary"
        >Signup!</button>
        <a href="/login" class="btn btn-link">Login instead</a>
      </form>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>