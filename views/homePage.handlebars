<div class="blogs">
  {{#each blogs}}
    <article class="card">
      <div class="card-header flex-row justify-space-between">
        <h2>
          <a href="/blogs/{{id}}">{{title}}</a>
        </h2>
        <div>
          Posted by
          {{user.username}}
          on
          {{formatDate createdAt}}
        </div>
      </div>
      <div class="card-body">
        {{body}}
      </div>
    </article>
  {{/each}}
</div>