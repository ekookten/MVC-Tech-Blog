<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.user.username}} on {{formatDate post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>

  {{#if post.comments}}

  <section class="card">
    <div class="card-header">
      <h3>Comments</h3>
    </div>

    <div class="card-body">
      {{#each post.comments as |comment|}}
      {{> comments}}
      {{/each}}
    </div>
  </section>
  {{/if}}

  <div class="container mt-4">
    <form id="new-comment-form" class="card">
      <div class="card-header">
        <h3>Add New Comment</h3>
      </div>
      <div class="card-body">
        <input type="hidden" name="post-id" value="{{post.id}}" />
        
        <div class="form-group">
          <label for="comment-body">Comment</label>
          <textarea name="comment-body" id="comment-body" class="form-control" rows="4"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>

</div>

<script src="/js/comment.js"></script>